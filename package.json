{
  "name": "my-blog",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/my-blog/main",
    "start:rest-api-gateway": "nest start --watch rest-api-gateway",
    "start:auth": "nest start --watch auth",
    "start:user": "nest start --watch user",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/my-blog/test/jest-e2e.json",
    "protoc:generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./proto/ts --ts_proto_opt=nestJs=true,fileSuffix=.pb,esModuleInterop=true,addGrpcMetadata=false,addNestjsRestParameter=true,useOptionals=all,useDate=true,onlyTypes=false,outputPartialMethods=true,initializeFieldsAsUndefined=true,usePrototypeForDefaults=true,stringEnums=true,outputTypeRegistry=true,useExactTypes=false,emitImportedFiles=false --proto_path=./proto ./proto/*.proto",
    "protoc:win:generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto.cmd --ts_proto_out=./proto/ts --ts_proto_opt=nestJs=true,fileSuffix=.pb,esModuleInterop=true,addGrpcMetadata=false,addNestjsRestParameter=true,useOptionals=all,useDate=true,onlyTypes=false,outputPartialMethods=true,initializeFieldsAsUndefined=true,usePrototypeForDefaults=true,stringEnums=true,outputTypeRegistry=true,useExactTypes=false,emitImportedFiles=false --proto_path=./proto ./proto/*.proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.10",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.10",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.12.0",
    "protobufjs": "^7.3.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-proto": "^1.181.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/filter(|/.*)$": "<rootDir>/libs/filter/src/$1",
      "^@app/crypto(|/.*)$": "<rootDir>/libs/crypto/src/$1",
      "^@app/util(|/.*)$": "<rootDir>/libs/util/src/$1"
    }
  }
}